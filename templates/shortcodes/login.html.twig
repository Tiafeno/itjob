<style type="text/css">
  input.form-control {
    font-family: Poppins !important;
  }

  .login-content {
    max-width: 400px;
    margin: 0px auto 50px;
  }

  .auth-head-icon {
    position: relative;
    height: 60px;
    width: 60px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 30px;
    background-color: #fff;
    color: #5c6bc0;
    box-shadow: 0 5px 20px #d6dee4;
    border-radius: 50%;
    transform: translateY(-50%);
    z-index: 2;
  }
</style>

<div class="ibox login-content" ng-app="formLogin" ng-controller="loginCtrl">
  <div class="text-center">
    <span class="auth-head-icon"><i class="la la-user"></i></span>
  </div>
  <form class="ibox-body" name="loginForm" ng-submit="formSubmit(loginForm.$valid)" novalidate>
    <h4 class="font-strong text-center mb-5">{{ title }}</h4>

    <div class="alert alert-pink alert-dismissable fade show alert-outline has-icon" ng-show="error">
      <i class="la la-info-circle alert-icon"></i>
      <div class="d-flex align-items-center justify-content-between">
        <div><strong>ERREUR</strong><br>Nom dâ€™utilisateur ou mot de passe non valide.</div>
      </div>
    </div>

    <div class="form-group mb-4">
      <input class="form-control " type="text" name="login" ng-model="login" autocomplete="off"
             placeholder="Votre adresse email" required>
    </div>
    <div class="form-group mb-4">
      <input class="form-control " type="password" name="pwd" ng-model="pwd" autocomplete="off"
             placeholder="Mot de passe" required>
    </div>
    <div class="flexbox mb-5">
      <span>
        <label class="ui-switch switch-icon mr-2 mb-0">
          <input type="checkbox" name="rememberme" ng-model="rememberme" checked="false">
          <span></span>
        </label>
        Remember
      </span>
      <a class="text-primary" href="forgot_password.html">Forgot password?</a>
    </div>
    <div class="text-center mb-4">
      <button class="btn btn-primary btn-rounded btn-block" type="submit" ng-disabled="buttonDisable">LOGIN</button>
    </div>
  </form>
</div>