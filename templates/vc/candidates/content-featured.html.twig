<div class="container-candidate uk-padding-remove">
  <h5 class="container-candidate-title">{{ title }}</h5>
  <div class="row mb-5 ml-0 mr-0">
    {% for candidate in candidates %}
      <div class="col-md-3 col-sm-6 row-offer">
        <div class="card ibox mb-4">
          <div class="card-body">
            <h4 class="card-title mb-4">
              <a href="{{ candidate.candidate_url }}">{{ candidate.title }}</a>
            </h4>
            <div class="candidate-info mt-2">
              <div class="mb-1">
                <p class="mb-0 uk-text-bold">L'emploi recherché:</p>
                <div>
                  {% if candidate.jobSought is empty %} Aucun {% endif %}
                  {{ candidate.jobSought|activated|join(', ') }}
                </div>
              </div>

              <div class="mb-1"><b>Permis :</b>
                {% if candidate.driveLicences is not empty %}
                  {% for driveLicence in candidate.driveLicences %}
                    {% if not loop.first %}, {% endif %}
                    {{ driveLicence['label'] }}
                  {% endfor %}
                {% else %}
                  Aucun
                {% endif %}
              </div>

              <div class="mb-1">
               <p class="mb-0 uk-text-bold">Secteur d'activité :</p>
               {{ candidate.branch_activity.name }}
               </div>

              <div class="mb-1"><b>Langues :</b>
                {% if candidate.languages is empty %} Aucun {% endif %}
                {{ candidate.languages|activated|join(', ') }}
              </div>
            </div>
            <div class="pt-4">
              <div class="card-info">
                CV ajouté le: {{ candidate.dateAdd }}
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="d-flex align-items-center justify-content-between">
              <div>
                Voir le CV
              </div>
              <div>
                <a href="{{ candidate.candidate_url }}" class="view"><i class="la la-plus-circle"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

    {% if candidates.length < 4 %}
      <div class="col-md-3 col-sm-6 row-offer">

        <div class="modal fade modal-featured-candidate" tabindex="-1" role="dialog" aria-labelledby="modalFeaturedCandidate" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Mettez votre CV à la une</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Veuillez contacter le service commercial aux numéros suivants:<br>
                032 45 378 60 - 033 82 591 13 - 034 93 962 18.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
              </div>
            </div>
          </div>
        </div>

        <div class="card ibox mb-4">
          <div class="card-body" style="background-color: lightseagreen;">
            <h4 class="card-title mb-4">
              <a href="#modal-featured-candidate" data-toggle="modal" data-target=".modal-featured-candidate">
                Mettez votre cv ici pour plus de visibilité
              </a>
            </h4>
            <div style="min-height: 86px;">
              <h4 class="card-title uk-margin-remove">
                <div class="mb-2 d-flex load-25"></div>
              </h4>
              <div class="mb-1 mt-2 d-flex load-100">
                <a  href="#modal-featured-candidate" data-toggle="modal" data-target=".modal-featured-candidate"
                  style="font-size: 90px;margin: auto;">
                  <i class="fa fa-plus-square" style="opacity: 0.6;"></i>
                </a>
              </div>

            </div>
          </div>
          <div class="card-footer" style="background-color: darkcyan; min-height: 47px;">
            <div class="d-flex align-items-center justify-content-between">

            </div>
          </div>
        </div>
      </div>
    {% endif %}

  </div>
</div>