<style type="text/css">

  .search-element-default .ibox-body .tab-content {
    background-color: #ffffff;
    border-radius: 0px 14px 14px;
  }

  .search-element-default .ibox-body li a {
    text-transform: uppercase;
  }

  .tabs-line-success .nav-link:hover,
  .search-element-default .ibox-body a.nav-link.active {
    border-bottom-color: #ffffff;
    background-color: #ffffff !important;
    color: #5e5e5e !important;
  }

  .search-element-default .ibox-body a.nav-link {
    border-radius: 10px 10px 0px 0px;
    background-color: #76cb3b;
    color: #ffffff;
    margin-right: 5px;
  }

  .search-element-default input {
    font-family: Poppins;
  }

  .search-default select {
    font-size: 12px;
  }

</style>

<div class="search-element-default">
  <div class="ibox-body">
    <ul class="nav tabs-line tabs-line-success">
      <li class="nav-item">
        <a class="nav-link active" href="#tab-8-1" data-toggle="tab" aria-expanded="true">Recherche emplois</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#tab-8-2" data-toggle="tab" aria-expanded="false">recherche candidat</a>
      </li>
    </ul>
    <div class="tab-content pt-4 pb-2">
      {# Recherche emplois template #}
      <div class="tab-pane fade active show" id="tab-8-1" aria-expanded="true">
        <form name="search-default search-offers" action="" method="get" class="ml-4 mr-4">
          <div class="row">
            <div class="col-md-3">
              <input class="form-control" name="s" type="text" placeholder="Mot clé">
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <select class="form-control" name="ab" title="Secteur d'activité">
                  <option></option>

                  {% for abranch in abranchs %}
                    <option value="{{ abranch.term_id }}">{{ abranch.name }}</option>
                  {% endfor %}

                  </optgroup>
                </select>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <select class="form-control" name="rg" title="Région">
                  <option></option>
                  {% for region in regions %}
                    <option value="{{ region.term_id }}">{{ region.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="col-md-3">
              <input type="hidden" name="post_type" value="offers">
              <button class="btn btn-primary btn-block">Trouver</button>
            </div>
          </div>
        </form>
      </div>

      {# Recherche candidat template #}
      <div class="tab-pane fade" id="tab-8-2" aria-expanded="false">
        <form name="search-default search-cv" action="" method="get" class="ml-4 mr-4">
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <select class="form-control" name="ab" title="Secteur d'activité">
                  <option></option>
                  {% for abranch in abranchs %}
                    <option value="{{ abranch.term_id }}">{{ abranch.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <select class="form-control" name="lg" title="Les langues maitrisées">
                  <option></option>
                  {% for language in languages %}
                    <option value="{{ language.term_id }}">{{ language.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <select class="form-control" name="rg" title="Région">
                  <option></option>
                  {% for region in regions %}
                    <option value="{{ region.term_id }}">{{ region.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <input class="form-control" name="s" type="text" placeholder="Mot clé">
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <select class="form-control" name="ms" title="Logiciel Maîtrisés">
                  <option></option>
                  {% for software in softwares %}
                    <option value="{{ software.term_id }}">{{ software.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="col-md-4">
              <input type="hidden" name="post_type" value="candidate">
              <button class="btn btn-primary btn-block">Trouver</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>